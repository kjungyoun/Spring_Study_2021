<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.product.model.dao.ProductDao">

	<insert id="insertProduct" parameterType="product">
		insert into product (productno, name, price, info)
		values (#{productno}, #{name}, #{price}, #{info})
	</insert>
	
	<select id="getLastNo" resultType="int">
		select LAST_INSERT_ID() as id from dual
	</select>
	
	<select id="getProduct" parameterType="int" resultType="product">
		select *
		from product
		<where>
			productno = #{productno}
		</where>
	</select>
	
	<select id="searchAll" parameterType="bean" resultType="product">
		select * from product
		<where>
			<if test="key != null and key != 'all' and word != null and word != '' ">
				<choose>
					<when test="key == 'name'">
						name like concat('%', #{word},'%')
					</when>
					<otherwise>
						price <![CDATA[<=]]> #{word}
					</otherwise>
				</choose>
			</if>
		</where>
		order by productno desc limit #{startNo}, #{interval}
		
	</select>
	
	<select id="totalCount" parameterType="bean" resultType="int">
		select count(*) as cnt from product
		<where>
			<if test="key != null and key != 'all' and word != null and word != '' ">
				<choose>
					<when test="key == 'name'">
						name like concat('%', #{word},'%')
					</when>
					<otherwise>
						price <![CDATA[<=]]> #{word} 
					</otherwise>
				</choose>
			</if>
		</where>
	</select>
	
	<delete id="remove">
		delete from product
		<where>
			productno = #{productno}
		</where>
	</delete>
	
</mapper>